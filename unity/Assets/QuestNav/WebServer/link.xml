<linker>
  <!-- Preserve WebServer configuration system (uses heavy reflection) -->
  <assembly fullname="QuestNav">
    <type fullname="QuestNav.WebServer.*" preserve="all" />
  </assembly>
  <!-- Preserve Config assembly for reflection -->
  <assembly fullname="Config" preserve="all" />
  <!-- Preserve EmbedIO for HTTP server -->
  <assembly fullname="EmbedIO" preserve="all" />
  <assembly fullname="Swan.Lite" preserve="all" />
  <!-- Preserve JSON.NET for serialization (using this instead of Swan) -->
  <assembly fullname="Newtonsoft.Json" preserve="all" />
  <!-- Preserve System.ComponentModel for type converters -->
  <assembly fullname="System.ComponentModel.TypeConverter">
    <type fullname="System.ComponentModel.UInt64Converter" preserve="all" />
  </assembly>
</linker>
